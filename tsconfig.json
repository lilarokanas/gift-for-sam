{
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory for TypeScript files
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
